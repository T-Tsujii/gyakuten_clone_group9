<div class="text-center">
  <div class="solution-title">
    <h5>【質問】</h5>
     <p class="text"><%= markdown(@question.title).html_safe %></p>
  </div>
  <hr>
  <div class="solution-detail">
    <h5>【詳細】</h5>
    <p class="text"><p><%= markdown(@question.detail).html_safe %></p></p>
  </div>
  <hr>
  <div class="solutions">
    <% @solutions.each do |solution| %>
      <p class="solution-content">
        <h5>【回答】</h5>
        <%= markdown(solution.content).html_safe %>
      </p>
    <% end %>  
  </div>

  <div class="solution-container">
    <h1>回答投稿</h1>
        <%= form_with model: [@question, @solution], local: true do |f| %>
          <div class="form-group d-flex flex-column">
            <%= f.label :content, "【回答】" %>
            <%= f.text_area :content, rows: 5,class: "form-control"  %>
          </div>
            <div class="form-group">
              <%= f.submit "送信", class: "btn btn-primary btn-block btn-lg" %>
            </div>
        <% end %>
        </form>
  </div>      
</div>