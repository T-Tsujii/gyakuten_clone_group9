      <a class="nav-link text-light active" href="#!">ライティング講座</a>
      <a class="nav-link text-light active" href="#!">LINE@</a>
      <% if user_signed_in? %>
        <%= link_to "ログアウト", destroy_user_session_path, {method: :delete, class: 'nav-link text-light active'} %>
