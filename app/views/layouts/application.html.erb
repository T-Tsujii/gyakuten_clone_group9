  <body>

    <nav class="nav bg-danger d-flex align-items-center" style="height: 80px; font-size: 20px;">
      <h1 href="#!"><a class="nav-link text-light" href="#" style="font-size: 28px;">Gyakuten9</a></h1>
      <li class="nav-item dropdown">
          <a class="nav-link text-light dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Rails</a>
          <div class="dropdown-menu">
            <%= link_to '動画教材', root_path, {class: 'dropdown-item text-danger lead'} %>
